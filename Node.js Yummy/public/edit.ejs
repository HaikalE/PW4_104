    <section class="sample-page">
      <div class="container" data-aos="fade-up">
        <%if (typeof(edit) =="undefined") {%>
        <form action="/add_yummy" method="post" role="form" data-aos="fade-up" data-aos-delay="100">
            
          <div class="row">
            <div class="col">
              <p>
                Add New Menu  
              </p>
              <input type="text" class="form-control" name="name_food" placeholder="Name Menu">
            </div>
            <div class="col">
              <p>Price</p>
              <input type="text" class="form-control" name="price" placeholder="Price">
            </div>
          </div>
          <br>
          <p>Ingredients</p>
          <input type="text" class="form-control" name="description" placeholder="Lorem, deren, trataro, filede, nerada">
          <br>
          <p>URL Image</p>
          <input type="text" class="form-control" name="url" placeholder="Price">
          <br>
          <p>Check Menu</p>
            <div class="form-group">
              <select class="form-select" required name="check_menu">
                <option value="">Open this select menu</option>
                <option value="Starters">Starters</option>
                <option value="Breakfast" >Breakfast</option>
                <option value="Lunch" >Lunch</option>
                <option value="Dinner" >Dinner</option>
              </select>
              <div class="invalid-feedback">Example invalid custom select feedback</div>
            </div>
          <input type="submit" class="btn btn-primary" value="submit"/>
        </form>
        <%} else{%>
          <script type="text/javascript">
            $(document).ready(()=>{
                $("#select").val('<%=obj.check_menu%>');
            });     
        </script>
          <form action="/edit_yummy" method="post" role="form" data-aos="fade-up" data-aos-delay="100">
            
            <div class="row">
              <div class="col">
                <p>
                  Edit Menu
                </p>
                <input type="text" class="form-control" name="name_food" placeholder="Name Menu" value="<%=obj.menu%>">
              </div>
              <div class="col">
                <p>Price</p>
                <input type="text" class="form-control" name="price" placeholder="Price" value="<%=obj.price%>">
              </div>
            </div>
            <br>
            <p>Ingredients</p>
            <input type="text" class="form-control" name="description" placeholder="Price" value="<%=obj.description%>">
            <br>
            <p>URL Image</p>
            <input type="text" class="form-control" name="url" placeholder="Price" value="<%=obj.url_image%>">
            <br>
            <input type="hidden" name="id_post" value='<%= obj._id%>'>
            <p>Check Menu</p>
            <div class="form-group">
              <select class="form-select" required name="check_menu" id="select">
                <option value="" >Open this select menu</option>
                <option value="Starters" >Starters</option>
                <option value="Breakfast" >Breakfast</option>
                <option value="Lunch" >Lunch</option>
                <option value="Dinner" >Dinner</option>
              </select>
              <div class="invalid-feedback">Example invalid custom select feedback</div>
            </div>
            <input type="submit" class="btn btn-primary" value="submit"/>
            <a href="edit2" class="btn btn-primary">Cancel</a>
          </form>
        <%}%>
        <br>
        <%var pr=0 %>
        <% if(details1!=null) { %>
        <ul data-aos="fade-up" data-aos-delay="100">
        <% details1.forEach(function(item){ %>
            Menu ke-<%= ++pr %> <ul class="list-group list-group-horizontal"><form action="/delete" method="post"><input type="hidden" id="delete" name="id_post" value='<%= item._id%>'><li class="list-group-item"><input type="submit" value="Delete" class="btn btn-link"></li></form><form action="/edit1" method="post"><input type="hidden" id="edit" name="id_post1" value='<%= item._id%>'><li class="list-group-item"><input type="submit" value="Edit" class="btn btn-link"></li></form></ul>
            <li>Menu        : <%= item.menu%></li>
            <li>Price       : <%= item.price %></li>
            <li>Description : <%= item.description%></li>
            <li class="text-break">URL Image   : <%= item.url_image%></li>
            <li>Check Menu  : <%= item.check_menu%></li>
            <br>
        <% })%>
        <% } %>
